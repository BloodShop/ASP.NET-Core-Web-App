@model ReverseEnginereeing.Pages.Houses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.House[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].BuiltAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].SizeM2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].Rooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].WantedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].ForSale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].Neighborhood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.House) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuiltAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeM2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WantedPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForSale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood.NeighborhoodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.PersonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.TypeId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.HouseId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.HouseId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.HouseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
